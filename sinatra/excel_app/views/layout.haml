!!!
%html
	%head
		%title Stuffs
		%link{:rel=>"stylesheet",:type=>"text/css",:href=>"css/bootstrap.min.css"}

		%script{:type=>"text/javascript",:src=>"js/jquery.js"}
		%script{:type=>"text/javascript",:src=>"js/bootstrap.min.js"}
		%script{:type=>"text/javascript",:src=>"js/knockout.js"}
	%body
		%h1.text-center Stuffs
		%div{:style=>"width:1000px;margin:auto;"}
			%ul.nav.nav-tabs.nav-stacked.pull-left{:style=>"width:200px;"}
				%li
					%a{:href=>"#indexDiv"} index
				%li
					%a{:href=>"#envDiv"} env

			%div{:style=>"margin-left:210px;"}
				%div#indexDiv=yield
				%div#envDiv
					%h2 there be env junks here
					%table.table
						%thead
							%tr
								%th key
								%th value
						%tbody
						-env.each do |k,v|
							%tr
								%td=k
								%td=v
